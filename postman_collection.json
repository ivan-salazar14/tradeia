  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login and Generate API Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"generateToken\": true,\n  \"tokenPermissions\": [\"read\", \"write\"],\n  \"tokenDescription\": \"Token for signals generation API\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login and generate a new API token for accessing the signals API"
          },
          "response": []
        },
        {
          "name": "Generate API Token (Standalone)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{apiToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"permissions\": [\"read\", \"write\"],\n  \"description\": \"Token for signals generation API\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tokens",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tokens"]
            },
            "description": "Generate a new API token for accessing the signals API (requires authentication)"
          },
          "response": []
        },
        {
          "name": "Revoke API Token",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{apiToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tokens/{{tokenId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tokens", "{{tokenId}}"]
            },
            "description": "Revoke an existing API token"
          },
          "response": []
        },
        {
          "name": "List API Tokens",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tokens",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tokens"]
            },
            "description": "List all API tokens for the current user"
          },
          "response": []
        }
      ],
      "description": "Endpoints for managing API tokens"
    },
    {
