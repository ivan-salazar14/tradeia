        {
          "name": "Get Signals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{apiToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/signals?limit=20&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "signals"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "offset",
                  "value": "0"
                }
              ]
            },
            "description": "Get signals for the current user"
          },
          "response": []
        },
        {
          "name": "Send Signal (Webhook)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-API-Key",
                "value": "{{apiToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"symbol\": \"BTC/USDT\",\n  \"type\": \"LONG\",\n  \"entry\": 50000,\n  \"takeProfit\": 55000,\n  \"stopLoss\": 48000,\n  \"timestamp\": \"2024-07-22T12:00:00Z\",\n  \"provider\": \"ExampleProvider\",\n  \"confidence\": 0.85,\n  \"timeframe\": \"4h\",\n  \"notes\": \"Strong bullish pattern forming\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhook/signals",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhook", "signals"]
            },
            "description": "Send a new signal via webhook"
          },
          "response": []
        },
        {
