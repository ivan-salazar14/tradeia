# Vercel Environment Variables Configuration
# Copy this to your Vercel project settings under Environment Variables

# ==========================================
# SUPABASE CONFIGURATION (Required)
# ==========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ==========================================
# EXTERNAL API CONFIGURATION
# ==========================================
SIGNALS_API_BASE=https://api.signals-provider.com

# ==========================================
# SECURITY & AUTHENTICATION
# ==========================================
# JWT Secret (auto-generated by Supabase, no need to set manually)
# NEXTAUTH_SECRET=your-nextauth-secret
# NEXTAUTH_URL=https://your-app.vercel.app

# ==========================================
# FIREBASE CONFIGURATION (Optional)
# ==========================================
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your-vapid-key

# ==========================================
# REDIS CONFIGURATION (For Production Queues)
# ==========================================
REDIS_URL=redis://username:password@host:port
REDIS_TLS_URL=rediss://username:password@host:port

# ==========================================
# MONITORING & LOGGING
# ==========================================
# Vercel Analytics (automatically configured)
# VERCEL_ANALYTICS_ID=your-analytics-id

# ==========================================
# CODECOV CONFIGURATION (For CI/CD)
# ==========================================
CODECOV_TOKEN=your-codecov-token

# ==========================================
# DEPLOYMENT VALIDATION
# ==========================================
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# ==========================================
# BUILD CONFIGURATION
# ==========================================
NODE_OPTIONS=--max-old-space-size=4096
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# CORS CONFIGURATION
# ==========================================
ALLOWED_ORIGINS=https://tradeia.vercel.app,https://your-custom-domain.com

# ==========================================
# RATE LIMITING CONFIGURATION
# ==========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_DEFAULT_TTL=300000
CACHE_MAX_SIZE=1000

# ==========================================
# CIRCUIT BREAKER CONFIGURATION
# ==========================================
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30000
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=3

# ==========================================
# WORKER CONFIGURATION
# ==========================================
WORKER_MAX_DURATION=300
WORKER_MEMORY=2048
WORKER_CONCURRENCY=2

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ==========================================
# HEALTH CHECK CONFIGURATION
# ==========================================
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# ==========================================
# API VERSIONING
# ==========================================
DEFAULT_API_VERSION=v2
API_VERSION_HEADER=X-API-Version

# ==========================================
# SECURITY HEADERS
# ==========================================
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_HEALTH_CHECK_INTERVAL=30000

# ==========================================
# QUEUE CONFIGURATION
# ==========================================
QUEUE_MAX_SIZE=10000
QUEUE_PROCESSING_INTERVAL=1000
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# ==========================================
# NOTIFICATION CONFIGURATION
# ==========================================
NOTIFICATION_BATCH_SIZE=50
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_TIMEOUT=10000

# ==========================================
# VALIDATION CONFIGURATION
# ==========================================
VALIDATION_SANITIZE_HTML=true
VALIDATION_SANITIZE_SQL=true
VALIDATION_MAX_STRING_LENGTH=10000
VALIDATION_TIMEOUT=5000

# ==========================================
# SWAGGER/OPENAPI CONFIGURATION
# ==========================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs
SWAGGER_TITLE=TradeIA API
SWAGGER_VERSION=2.0.0
SWAGGER_DESCRIPTION=Enterprise Trading Signals API

# ==========================================
# DEPLOYMENT METADATA
# ==========================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=2.1.0
DEPLOYMENT_TIMESTAMP=2024-01-15T00:00:00Z

# ==========================================
# MONITORING & ALERTS
# ==========================================
ALERT_EMAIL=alerts@yourcompany.com
ALERT_WEBHOOK_URL=https://hooks.slack.com/your-webhook
MONITORING_ENABLED=true
METRICS_ENABLED=true

# ==========================================
# BACKUP & RECOVERY
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ==========================================
# COMPLIANCE & AUDIT
# ==========================================
AUDIT_LOG_ENABLED=true
GDPR_COMPLIANT=true
DATA_RETENTION_DAYS=2555

# ==========================================
# PERFORMANCE OPTIMIZATION
# ==========================================
COMPRESSION_ENABLED=true
IMAGE_OPTIMIZATION_ENABLED=true
CDN_ENABLED=true

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_REAL_TIME_NOTIFICATIONS=true
FEATURE_BACKGROUND_PROCESSING=true
FEATURE_API_VERSIONING=true
FEATURE_RATE_LIMITING=true
FEATURE_CIRCUIT_BREAKER=true
FEATURE_CACHING=true
FEATURE_HEALTH_CHECKS=true
FEATURE_SWAGGER_DOCS=true
FEATURE_SECURITY_HEADERS=true
FEATURE_ERROR_TRACKING=true
FEATURE_PERFORMANCE_MONITORING=true

# ==========================================
# INTEGRATION ENDPOINTS
# ==========================================
WEBHOOK_SECRET=your-webhook-secret
INTEGRATION_TIMEOUT=30000
INTEGRATION_RETRY_ATTEMPTS=3

# ==========================================
# MAINTENANCE MODE
# ==========================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.

# ==========================================
# DEBUGGING (Development Only)
# ==========================================
DEBUG_MODE=false
LOG_QUERIES=false
LOG_REQUESTS=false
LOG_RESPONSES=false

# ==========================================
# LEGACY SUPPORT
# ==========================================
LEGACY_API_SUPPORT=true
LEGACY_REDIRECTS_ENABLED=true
DEPRECATED_ENDPOINTS_LOG=true

# ==========================================
# RATE LIMITING TIERS
# ==========================================
TIER_FREE_REQUESTS=50
TIER_BASIC_REQUESTS=500
TIER_PRO_REQUESTS=5000
TIER_ENTERPRISE_REQUESTS=50000

# ==========================================
# CACHE INVALIDATION
# ==========================================
CACHE_INVALIDATION_ENABLED=true
CACHE_INVALIDATION_INTERVAL=300000
CACHE_WARMUP_ENABLED=true

# ==========================================
# LOAD BALANCING
# ==========================================
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_GRACE_PERIOD=30000
CONNECTION_DRAINING_TIME=30000

# ==========================================
# AUTO-SCALING
# ==========================================
AUTO_SCALING_ENABLED=true
MIN_INSTANCES=1
MAX_INSTANCES=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# ==========================================
# DISASTER RECOVERY
# ==========================================
DR_ENABLED=true
BACKUP_REGION=us-west-2
FAILOVER_ENABLED=true
ROLLBACK_ENABLED=true

# ==========================================
# COMPLIANCE REPORTING
# ==========================================
COMPLIANCE_REPORTS_ENABLED=true
COMPLIANCE_REPORT_SCHEDULE=0 9 * * 1
COMPLIANCE_REPORT_RECIPIENTS=compliance@yourcompany.com